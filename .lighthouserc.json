{
  "ci": {
    "collect": {
      "staticDistDir": "./",
      "url": ["index.html"]
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.6}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["warn", {"minScore": 0.7}],
        "categories:seo": ["error", {"minScore": 0.9}],
        "categories:pwa": ["off"]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}